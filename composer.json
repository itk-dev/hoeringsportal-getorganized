{
    "name": "itk-dev/hoeringsportal-getorganized",
    "description": "Archiving documents in GetOrganized",
    "license": "proprietary",
    "type": "project",
    "require": {
        "php": "^8.3",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "doctrine/doctrine-migrations-bundle": "*",
        "easycorp/easyadmin-bundle": "*",
        "stof/doctrine-extensions-bundle": "^1.13",
        "symfony/console": "7.2.*",
        "symfony/dotenv": "7.2.*",
        "symfony/flex": "^2",
        "symfony/framework-bundle": "7.2.*",
        "symfony/mailer": "7.2.*",
        "symfony/messenger": "7.2.*",
        "symfony/monolog-bundle": "*",
        "symfony/runtime": "7.2.*",
        "symfony/webpack-encore-bundle": "*",
        "symfony/yaml": "7.2.*"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "^2.45",
        "friendsofphp/php-cs-fixer": "^3.67",
        "rector/rector": "^2.0",
        "symfony/maker-bundle": "*",
        "symfony/stopwatch": "7.2.*",
        "symfony/web-profiler-bundle": "7.2.*"
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php73": "*",
        "symfony/polyfill-php74": "*",
        "symfony/polyfill-php80": "*",
        "symfony/polyfill-php81": "*",
        "symfony/polyfill-php82": "*"
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "repositories": {
        "itk-dev/getorganized-api-client-php": {
            "type": "vcs",
            "url": "https://github.com/itk-dev/getorganized-api-client-php"
        },
        "kapersoft/sharefile-api": {
            "type": "git",
            "url": "https://github.com/rimi-itk/sharefile-api"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true,
            "php-http/discovery": true,
            "symfony/flex": true,
            "symfony/runtime": true
        },
        "bump-after-update": true,
        "sort-packages": true
    },
    "extra": {
        "symfony": {
            "allow-contrib": true,
            "require": "7.2.*",
            "docker": true
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "code-analysis": [
            "@code-analysis/phpstan"
        ],
        "code-analysis/phpstan": [
            "phpstan analyse --level=5 src"
        ],
        "coding-standards-apply/php": [
            "@coding-standards-apply/php-cs-fixer"
        ],
        "coding-standards-apply/php-cs-fixer": [
            "vendor/bin/php-cs-fixer --allow-risky=yes fix"
        ],
        "coding-standards-apply/twig": [
            "@coding-standards-apply/twig-cs-fixer"
        ],
        "coding-standards-apply/twig-cs-fixer": [
            "vendor/bin/twig-cs-fixer fix templates"
        ],
        "coding-standards-check": [
            "@coding-standards-check/php",
            "@coding-standards-check/twig"
        ],
        "coding-standards-check/php": [
            "@coding-standards-check/php-cs-fixer"
        ],
        "coding-standards-check/twig-cs-fixer": [
            "vendor/bin/twig-cs-fixer fix templates"
        ]
    }
}
